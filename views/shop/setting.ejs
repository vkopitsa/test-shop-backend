<div class="container" >
  <h1>User settings</h1>
  <div class="row">
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <img src="<%- avatar %>" class="avatar img-rounded" alt="avatar">
        <h6>Current avatar via <a href="http://gravatar.com" target="_blank">Gravatar</a>.</h6>
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <h3>Personal info</h3>
      <form class="form-horizontal" role="form" action="/setting" method="post" autocomplete="off">
        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" value="<%- user.email %>" type="text" disabled>
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-3 control-label">Api Token:</label>
          <div class="col-lg-8">
            <input class="form-control" id="api-token" value="<%- accessToken %>" type="text" disabled>
            <a href="#" id="reset-api-token">Reset API Token</a>
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Username:</label>
          <div class="col-md-8">
            <input type="text" class="form-control" id="username" name="username" placeholder="User name" value="<%- user.username %>" autocomplete="off">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label">Password:</label>
          <div class="col-md-8">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" autocomplete="off">
          </div>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <span></span>
            <input class="btn btn-default" value="Cancel" type="reset">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>